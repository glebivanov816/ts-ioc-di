{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es5", "es6", "es7"],
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "typeRoots": [
        "node_modules/@types",
        "types"
    ],
    "baseUrl": ".",
    "paths": {
        "@/*": ["src/ts/*"]
    }
  }
}

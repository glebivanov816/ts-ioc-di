{
  "compilerOptions": {
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strict": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "es7"],
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "typeRoots": [
        "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
        "@/*": ["src/ts/*"]
    }
  },
  "include": ["src/**/*"]
}
